{% extends '::frontend.html.twig' %}

{% block headline %}Usuario{% endblock headline %}

{% block content %}

    <div class="row-fluid">
        <div class="span8">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Lastname</th>
                        <td>{{ entity.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ entity.password }}</td>
                    </tr>
                    <tr>
                        <th>Salt</th>
                        <td>{{ entity.salt }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ entity.email }}</td>
                    </tr>
                    <tr>
                        <th>Isenable</th>
                        <td>{{ entity.isEnable }}</td>
                    </tr>
                    <tr>
                        <th>Isactive</th>
                        <td>{{ entity.isActive }}</td>
                    </tr>
                    <tr>
                        <th>Created_at</th>
                        <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Updated_at</th>
                        <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Last_login_at</th>
                        <td>{{ entity.lastloginat|date('Y-m-d H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    <div class="span4">
        <ul class="nav nav-list">
            <li>
                <a href="{{ path('user') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('user_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>
                <br>
                <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
                        {{ form_row(delete_form.id) }}
                        {{ form_row(delete_form._token) }}
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </li>
        </ul>
    </div>

{% endblock content %}