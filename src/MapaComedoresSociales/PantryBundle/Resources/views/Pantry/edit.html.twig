{% extends '::frontend.html.twig' %}

{% block headline %}Pantry edit{% endblock headline %}

{% block content %}

<form action="{{ path('pantry_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn btn-primary" type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('pantry') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('pantry_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock content %}