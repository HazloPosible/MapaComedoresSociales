{% extends '::frontend.html.twig' %}

{% block headline %}GeoArea edit{% endblock headline %}

{% block content %}
<div class="row-fluid">
    <div class="span8">
        <form action="{{ path('geoarea_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}
            <p>
                <button class="btn btn-primary" type="submit">Edit</button>
            </p>
        </form>
    </div>
    <div class="span4">
        <ul class="well nav nav-list">
            <li>
                <a href="{{ path('geoarea') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <form action="{{ path('geoarea_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </li>
        </ul>
    </div>
</div>


{% endblock content %}