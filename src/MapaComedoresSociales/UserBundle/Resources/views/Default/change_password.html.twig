{% extends '::frontend.html.twig' %}

{% block headline %}Change password{% endblock headline %}

{% block content %}
    
    <form class= "form" action="{{ path('user_change') }}" method="post" {{
        form_enctype(form) }}>

        {{ form_errors(form) }}
        <legend>Change your password</legend>
        <p>
            Write a new password:
        </p>
        {{ form_widget(form) }}
        <div class="control-group">
            <input class="btn btn-primary" type="submit" value="Submit" />
        </div>
    </form>

{% endblock content %}