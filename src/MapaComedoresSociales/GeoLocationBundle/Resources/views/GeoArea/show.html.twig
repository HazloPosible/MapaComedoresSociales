{% extends '::frontend.html.twig' %}

{% block headline %}GeoArea{% endblock headline %}

{% block content %}

<div class="row-fluid">
    <div class="span8">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ entity.slug }}</td>
                </tr>
                <tr>
                    <th>Latitude</th>
                    <td>{{ entity.latitude }}</td>
                </tr>
                <tr>
                    <th>Longitude</th>
                    <td>{{ entity.longitude }}</td>
                </tr>
                <tr>
                    <th>Lft</th>
                    <td>{{ entity.lft }}</td>
                </tr>
                <tr>
                    <th>Rgt</th>
                    <td>{{ entity.rgt }}</td>
                </tr>
                <tr>
                    <th>Root</th>
                    <td>{{ entity.root }}</td>
                </tr>
                <tr>
                    <th>Level</th>
                    <td>{{ entity.level }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Updated_at</th>
                    <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
                </tr>
                </tbody>
        </table>
    </div>
    <div class="span4">
        <ul class="well nav nav-list"">
            <li>
                <a href="{{ path('geoarea') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('geoarea_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>
                <form action="{{ path('geoarea_delete', { 'id': entity.id }) }}" method="post">
                    {{ form_widget(delete_form) }}
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </li>
        </ul>
    </div>

{% endblock content %}
