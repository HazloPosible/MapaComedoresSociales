{% extends '::frontend.html.twig' %}

{% block headline %}GeoArea list{% endblock headline %}

{% block content %}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Lft</th>
            <th>Rgt</th>
            <th>Root</th>
            <th>Level</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('geoarea_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.slug }}</td>
            <td>{{ entity.latitude }}</td>
            <td>{{ entity.longitude }}</td>
            <td>{{ entity.lft }}</td>
            <td>{{ entity.rgt }}</td>
            <td>{{ entity.root }}</td>
            <td>{{ entity.level }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('geoarea_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('geoarea_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


<a class="btn btn-primary" href="{{ path('geoarea_new') }}">
    Create a new entry
</a>

{% endblock content %}