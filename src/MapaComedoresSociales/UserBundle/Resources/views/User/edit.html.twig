{% extends '::frontend.html.twig' %}

{% block headline %}Editar usuario{% endblock headline %}

{% block content %}

    <div class="row-fluid">
        <div class="span8">
            <form class="form-horizontal" action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                {{ form_widget(edit_form) }}
                <p>
                    <button class="btn btn-primary" type="submit">Edit</button>
                </p>
            </form>
        </div>
        <div class="span4">
            <ul class="nav nav-list">
                <li>
                    <a href="{{ path('user') }}">
                        Back to the list
                    </a>
                </li>
                <li>
                    <br>
                    <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
                        {{ form_row(delete_form.id) }}
                        {{ form_row(delete_form._token) }}
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>

{% endblock content %}